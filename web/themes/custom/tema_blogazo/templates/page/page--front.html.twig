<div class="page">
  {% embed '@radix/navbar/navbar.twig' with {
    placement: 'sticky-top',
    container: 'fixed',
    color: 'light',
    utility_classes: ['bg-light'],
  } %}

    {% block branding %}
      {% if page.navbar_branding %}
        {{ page.navbar_branding }}<br>
        {{site_slogan}}
      {% endif %}
    {% endblock %}

    {% block left %}
      {% if page.navbar_left %}
        <div class="mr-auto">
          {{ page.navbar_left }}
        </div>
      {% endif %}
    {% endblock %}

    {% block right %}
      {% if page.navbar_right %}
        {{ page.navbar_right }}
      {% endif %}
    {% endblock %}
  {% endembed %}

  <main class="pt-5 pb-5">
    {% if page.header %}
      <header class="page__header mb-3">
        <div class="container">
          {{ page.header }}
        </div>
      </header>
    {% endif %}

    {% if page.content %}
       <div class="page__content">
        <div class="container">
            <div class="row">
                <div class="order-sm-1 order-1 col-md-8">
    	            {{ page.content }}           
                </div>
                <div class="order-sm-2 col-md-4">
                    {{ page.sidebar_second }}
                </div>
            </div>
        </div>
      </div>

    {% endif %}

        
  </main>

  {% if page.footer %}
    <footer class="page__footer">
      <div class="container">
        <div class="d-flex justify-content-md-between align-items-md-center">
          <h5>Blogazo Drupazo 2098 A.C.</h5>
          {{ page.footer }}          
        </div>
      </div>
    </footer>
  {% endif %}
</div>


