{#
/**
 * @file
 * Template for the comment field on the posts.
 */
#}
<section{{ attributes }}>
  {{ title_prefix }}
  {{ title_suffix }}

  {{ comments }}

  {% if comment_form %}
    <div class="row">
      <div class="col-md-12 post-comments">
        <div class="card-custom">
          <div class="card-header-custom">
            {{ 'Add new comment'|t }}
          </div>
          <div class="card-body-custom">
            {{ comment_form }}
          </div>
        </div>
      </div>
    </div>
  {% endif %}

</section>